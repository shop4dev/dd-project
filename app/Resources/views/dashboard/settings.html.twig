{% extends 'dashboard/base.html.twig' %}
{% set avatar = user.avatar.img %}
{% block title %}

    myTask - Settings

{% endblock %}

{% block dashboard %}
    <section class="content-header">
        <h1>
            User Profile Settings
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Examples</a></li>
            <li class="active">User profile settings</li>
        </ol>
    </section>

{% endblock %}

{% block body %}

    <aside class="profile-info col-lg-3">
        <section class="panel">
            <div class="bio-graph-heading" style="background: #ff766c;color: #fff;text-align: center;font-style: italic;padding: 40px 110px;border-radius: 4px 4px 0 0;-webkit-border-radius: 4px 4px 0 0;font-size: 16px;font-weight: 300;">
                <h1 style="font-size: 22px;font-weight: 300;margin: 0 0 0px;">My Avatar</h1>
            </div>
            <div class="panel-body bio-graph-info" style=" margin: 15px">
                <div class="user-heading round" style="border-radius: 4px 4px 0 0;-webkit-border-radius: 4px 4px 0 0;text-align: center;">
                        <img src="{{ app.user.avatar.img }}" alt="" style="width: 112px;height: 112px;border-radius: 50%;-webkit-border-radius: 50%;">
                </div>
                <div class="row">
                    {{ form_start(form2) }}

                    {{ form_row(form2.img) }}
                    <button type="submit" style="background-color: #3c8dbc;border: none;color: white;padding: 16px 32px;text-decoration: none;margin: 20px 2px;cursor: pointer;">Submit</button>
                    {{ form_end(form2) }}
                </div>
            </div>
        </section>
    </aside>

    <aside class="profile-info col-lg-9">
        <section class="panel">
            <div class="bio-graph-heading" style="background: #41cac0;color: #fff;text-align: center;font-style: italic;padding: 40px 110px;border-radius: 4px 4px 0 0;-webkit-border-radius: 4px 4px 0 0;font-size: 16px;font-weight: 300;">
                <h1 style="font-size: 22px;font-weight: 300;margin: 0 0 0px;">About Me</h1>
            </div>
            <div class="panel-body bio-graph-info" style="color: #777; margin: 15px">
                <div class="row">
                    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                    <div class="form-group has-feedback">
                        {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter your name'}}) }}
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Enter password'}}) }}
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Retype password'}}) }}
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <button type="submit" style="background-color: #3c8dbc;border: none;color: white;padding: 16px 32px;text-decoration: none;margin: 4px 2px;cursor: pointer;">Submit</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </aside>

{% endblock %}